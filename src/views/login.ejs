<%- include('includes/head') %>
  <%- include('includes/nav') %>

    <main>
      <div class="row justify-content-center">
        <div class="col-lg-8 my-3">
          <h1 class="text-center title-page">Agenda Online</h1>
          <p class="text-center lead">Faça login ou criei sua conta</p>

          <div class="login-form">
            <div class="row">
              <!-- Seção de criar conta -->
              <div class="col-lg">
                <h4>Faça seu cadastro</h4>
                <p>Se você ainda não tem conta, cadastre-se</p>
                <form action="/login/register" method="POST">
                  <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                  <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" name="email" placeholder="Informe seu email">
                  </div>
                  <div class="form-group">
                    <label>Senha</label>
                    <input type="password" class="form-control" name="password" placeholder="Informe sua senha">
                  </div>
                  <button type="submit" name="submit" class="btn btn-primary">Criar conta</button>
                </form>
  
              </div>            
  
  
              <!-- Seção de login -->
  
              <div class="col-lg">
                <h4>Faça seu login</h4>
                <p>Se você já tem uma conta faça seu login</p>
                <form action="/login/login" method="POST">
                  <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                  <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" name="email" placeholder="Informe seu email">
                  </div>
                  <div class="form-group">
                    <label>Senha</label>
                    <input type="password" class="form-control" name="password" placeholder="Informe sua senha">
                  </div>
                  <button type="submit" name="submit" class="btn btn-primary">Entrar</button>
                </form>
              </div>
  
            </div>

          </div>
        </div>
      </div>
    </main>

    <%- include('includes/footer') %>